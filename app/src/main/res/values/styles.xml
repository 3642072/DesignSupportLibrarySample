<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!--<item name="android:textColorSecondary">@color/red</item>-->
        <!--返回键样式-->
        <!--<item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>-->
        <!--返回或更多的按钮颜色-->
        <item name="colorControlNormal">@android:color/holo_blue_dark</item>
        <!--溢出菜单背景色-->
        <item name="android:itemBackground">?attr/colorPrimary</item>
        <!-- 溢出菜单 字体颜色 -->
        <!--  高版本api 上，需要这样设置，否则没效果-->
        <!--<item name="android:textAppearanceLargePopupMenu">@style/textAppearanceLargePopupMenu</item>-->
        <!-- 低版本api-->
        <item name="textAppearanceLargePopupMenu">@style/textAppearanceLargePopupMenu</item>

    </style>

    <style name="textAppearanceLargePopupMenu" parent="TextAppearance.Widget.AppCompat.ExpandedMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/holo_red_dark</item>
    </style>
</resources>
